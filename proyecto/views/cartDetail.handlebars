<h1>Carrito ID: {{cart.id}}</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <h3>{{this.product.title}}</h3>
        <p><strong>Precio:</strong> ${{this.product.price}}</p>
        <p><strong>Cantidad:</strong> {{this.quantity}}</p>
        <p><strong>Total:</strong> ${{multiply this.product.price this.quantity}}</p>
        <form method="POST" action="/api/carts/{{../cart.id}}/products/{{this.product.id}}?_method=DELETE">
          <button type="submit">❌ Eliminar del carrito</button>
        </form>
        <hr>
      </li>
    {{/each}}
  </ul>

  <form method="POST" action="/api/carts/{{cart.id}}?_method=DELETE">
    <button type="submit">🗑️ Vaciar carrito</button>
  </form>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}

<a href="/products">⬅️ Volver a productos</a>
